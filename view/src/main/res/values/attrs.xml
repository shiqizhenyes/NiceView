<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="NiceWheelPicker">
        <attr name="nice_wheel_data" format="reference"/>
        <attr name="nice_wheel_selected_item_position" format="integer"/>
        <attr name="nice_wheel_item_text_size" format="dimension"/>
        <attr name="nice_wheel_item_text_color" format="color"/>
        <attr name="nice_wheel_selected_item_text_color" format="color"/>
        <attr name="nice_wheel_same_width" format="boolean"/>
        <attr name="nice_wheel_maximum_width_text" format="string"/>
        <attr name="nice_wheel_maximum_width_text_position" format="integer"/>
        <attr name="nice_wheel_visible_item_count" format="integer"/>
        <attr name="nice_wheel_item_space" format="dimension"/>
        <attr name="nice_wheel_cyclic" format="boolean"/>
        <attr name="nice_wheel_indicator" format="boolean"/>
        <attr name="nice_wheel_indicator_color" format="color"/>
        <attr name="nice_wheel_indicator_size" format="dimension"/>
        <attr name="nice_wheel_curtain" format="boolean"/>
        <attr name="nice_wheel_curtain_color" format="color"/>
        <attr name="nice_wheel_atmospheric" format="boolean"/>
        <attr name="nice_wheel_curved" format="boolean"/>
        <attr name="nice_wheel_item_align" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="NicePointerView">
        <attr name="outRadius" format="dimension"/>
        <attr name="lineHeight" format="dimension"/>
        <attr name="outColor" format="color"/>
        <attr name="insideColor" format="color"/>
        <attr name="lineColor" format="color"/>
        <attr name="waterWave" format="boolean"/>
        <attr name="waterWaveMinRadius" format="dimension"/>
        <attr name="waterWaveMaxRadius" format="dimension"/>
        <attr name="jumpStyle" format="integer"/>
        <attr name="zoomStyle" format="integer"/>
    </declare-styleable>

    <integer name="defaultItemCount">20</integer>

    <integer name="DIDI">101</integer>
    <integer name="COMMON">102</integer>
    <integer name="MO_BAI">102</integer>

    <integer-array name="jumpStyle">
        <item>@integer/DIDI</item>
        <item>@integer/COMMON</item>
    </integer-array>

    <integer-array name="zoomStyle">
        <item>@integer/DIDI</item>
        <item>@integer/MO_BAI</item>
    </integer-array>

    <attr name="dotColor" format="color"/>
    <attr name="dotAnimationColor" format="color"/>

    <declare-styleable name="NiceDotLoadingView">
        <attr name="dotRadius" format="dimension"/>
        <attr name="dotColor"/>
        <attr name="dotAnimationColor"/>
        <attr name="dotCount" format="integer"/>
        <attr name="dotSpace" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="NiceDotView">
        <attr name="dotColor"/>
<!--        <attr name="dotPadding"/>-->
    </declare-styleable>

    <declare-styleable name="NicePopLayout">
        <attr name="radiusSize" format="dimension" />
        <attr name="bulgeSize" format="dimension" />
        <attr name="offsetSize" format="dimension" />
        <attr name="siteMode" format="enum">
            <enum name="top" value="0" />
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="NiceBubbleLayout">
        <attr name="backgroundColor" format="color" />
        <attr name="shadowColor" format="color" />
        <attr name="shadowSize" format="dimension" />
        <attr name="radius" format="dimension" />
<!--        <attr name="triangular" format="dimension"/>-->
        <attr name="direction" format="enum">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="offset" format="dimension" />
        <attr name="bubbleHOffsetStart" format="dimension"/>
        <attr name="bubbleHOffsetEnd" format="dimension"/>
        <attr name="bubbleVOffsetTop" format="dimension"/>
        <attr name="bubbleVOffsetBottom" format="dimension"/>
    </declare-styleable>

    <attr name="circleRadius" format="dimension"/>
    <attr name="circleColor" format="color"/>

    <declare-styleable name="NiceCircleRippleView">
        <attr name="circleRadius"/>
        <attr name="circleColor"/>
        <attr name="circleRippleRadius" format="dimension"/>
        <attr name="circleRippleDuring" format="integer"/>
    </declare-styleable>

    <declare-styleable name="NiceCircleView">
        <attr name="circleRadius"/>
        <attr name="circleColor"/>
    </declare-styleable>


    <declare-styleable name="NiceTextView">
        <attr name="niceStrokeSize" format="dimension"/>
        <attr name="niceStrokeColor" format="color"/>
    </declare-styleable>

    <attr name="nBorderColor" format="color"/>
    <attr name="nBorderSize" format="dimension"/>

    <declare-styleable name="NiceRadioButton">
        <attr name="nBorderSize"/>
        <attr name="nBorderColor"/>
        <attr name="nButtonColor" format="color"/>
        <attr name="nText" format="string"/>
        <attr name="nTextColor" format="color"/>
        <attr name="nTextSize" format="dimension"/>
        <attr name="nCheck" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="NiceAvatar">
        <attr name="nCount" format="integer"/>
        <attr name="nRadius" format="dimension"/>
        <attr name="nBorderSize"/>
        <attr name="nBorderColor"/>
    </declare-styleable>
</resources>